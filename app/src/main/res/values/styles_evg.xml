<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MidInParentStyle">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="EditInputStyle" parent="MidInParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_large</item>
        <item name="android:textColor">@color/colorAppPrimary</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColorHint">@color/colorAppHint</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ButtonWithBlackSelectorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_large</item>
        <item name="android:background">@drawable/selector_btn_black</item>
        <item name="android:textColor">@color/colorAppTheme</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:paddingStart">@dimen/item_padding_hor</item>
        <item name="android:paddingTop">@dimen/margin_tiny</item>
        <item name="android:paddingBottom">@dimen/margin_tiny</item>
        <item name="android:paddingEnd">@dimen/item_padding_hor</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextTipsMidInParentStyle" parent="@style/MidInParentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textNormalColor</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextWrongTipStyle" parent="@style/MidInParentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textWrongColor</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>